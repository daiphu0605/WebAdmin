<div class="row">
    <div class="col-lg-3">
        <img src="{{detail.image}}" alt="{{detail.id}}" class="col">

    </div>

    <div class="col-lg-9">
        <h3 class="font-medium">{{detail.title}}</h3>
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th scope="row">Category</th>
                    <td>
                        {{#each category}}
                        {{category_name}}
                        {{/each}}
                    </td>
                    
                </tr>
                <tr>
                    <th scope="row">Price</th>
                    <td>{{detail.base_price}}</td>

                </tr>
                <tr>
                    <th scope="row">ISBN</th>
                    <td>{{detail.isbn}}</td>

                </tr>
                <tr>
                    <th scope="row">Supplier</th>
                    <td>{{detail.supplier}}</td>
                <tr>
                    <th scope="row">Author</th>
                    <td>{{detail.author}}</td>

                </tr>
                <tr>
                    <th scope="row">Publisher</th>
                    <td>{{detail.publisher}}</td>

                </tr>
                <tr>
                    <th scope="row">Public year</th>
                    <td>{{detail.public_year}}</td>
                <tr>
                    <th scope="row">Weight</th>
                    <td>{{detail.weight}}</td>

                </tr>
                <tr>
                    <th scope="row">Size</th>
                    <td>{{detail.size}}</td>

                </tr>
                <tr>
                    <th scope="row">Number of page</th>
                    <td>{{detail.number_page}}</td>
                <tr>
                    <th scope="row">Page</th>
                    <td>{{detail.page}}</td>

                </tr>
                <tr>
                    <th scope="row">Description Title</th>
                    <td>{{detail.description_title}}</td>

                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{detail.description}}</td>

                </tr>
            </tbody>
        </table>

        <div class="comment-footer">
            <span class="text-muted float-right">{{detail.day_add}}</span>
            <a href="/products/{{detail.id}}/edit" class="btn btn-cyan btn-sm">Edit</a>
        </div>
    </div>
</div>